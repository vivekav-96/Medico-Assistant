<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:background="#ffffff"
    sothree:umanoPanelHeight="70dp"
    sothree:umanoShadowHeight="4dp"
    sothree:umanoParallaxOffset="100dp"
    sothree:umanoDragView="@+id/dragView"
    sothree:umanoOverlay="true"
    sothree:umanoScrollableView="@+id/list">

    <!-- MAIN CONTENT -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="75dp"
                android:id="@+id/number_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Next Appointment is "/>
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="175sp"
                    android:text="10"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="italic|bold"
                    android:text="days"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_below="@+id/number_l"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="30/10/2017"
                    android:textStyle="italic"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="10.52 PM"/>
            </LinearLayout>
        </RelativeLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_book_app"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="80dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_add_btn"
            android:layout_gravity="bottom|end"/>
    </FrameLayout>

    <!-- SLIDING LAYOUT -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:clickable="true"
        android:focusable="false">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="false"
                android:layout_margin="5dp"
                android:id="@+id/dragView">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    sothree:cardElevation="2dp"
                    android:scrollbars="none"
                    sothree:cardBackgroundColor="#fff"
                    sothree:cardCornerRadius="2dp"
                    android:layout_height="70dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Dr Vinod"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="MIMS Hospital"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    sothree:cardElevation="2dp"
                    android:scrollbars="none"
                    sothree:cardBackgroundColor="#fff"
                    sothree:cardCornerRadius="2dp"
                    android:layout_height="match_parent">
                    <ProgressBar
                        android:id="@+id/progressBar1"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_gravity="center"
                        android:visibility="gone"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:padding="6dp"
                        android:scrollbarSize="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none" />
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>