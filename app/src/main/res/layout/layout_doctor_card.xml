<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="181dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/cdocCardBg">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/specialityTV"
                android:layout_width="156dp"
                android:layout_height="25dp"
                android:layout_marginStart="32dp"
                android:text="Cardiologist"
                android:textColor="@color/specialityRed."
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/docProfileImageView"
                app:layout_constraintTop_toBottomOf="@+id/doctorTV"
                android:layout_marginLeft="32dp" />

            <TextView
                android:id="@+id/doctorTV"
                android:layout_width="207dp"
                android:layout_height="38dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:text="Dr. John Oliver"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:layout_constraintStart_toEndOf="@+id/docProfileImageView"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="32dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/docProfileImageView"
                android:layout_width="89dp"
                android:layout_height="79dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/johnoliver"
                app:civ_border_color="@color/black"
                app:civ_border_width="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bookAnAppointmentButton"
                android:layout_width="169dp"
                android:layout_height="45dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/docCardBg"
                android:paddingBottom="10dp"
                android:paddingTop="13dp"
                android:text="BOOK AN APPOINTMENT"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:layout_constraintVertical_bias="0.1"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginBottom="44dp"
                android:background="@color/line"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/qualificationsTV"
                android:layout_width="115dp"
                android:layout_height="21dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="MBBS, MD, DM, DNB"
                android:textSize="11sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/docProfileImageView"
                android:layout_marginLeft="16dp" />

            <TextView
                android:id="@+id/emailTV"
                android:layout_width="193dp"
                android:layout_height="19dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="4dp"
                android:paddingTop="1dp"
                android:text="john.oliver@gmail.com"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/specialityTV" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="19dp"
                android:layout_height="18dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/ic_dialog_email"
                android:backgroundTint="@color/date_picker_text_normal"
                app:layout_constraintBottom_toBottomOf="@+id/textView5"
                app:layout_constraintStart_toEndOf="@+id/docProfileImageView"
                app:layout_constraintTop_toBottomOf="@+id/specialityTV"
                app:layout_constraintVertical_bias="0.0"
                tools:targetApi="lollipop"
                android:layout_marginLeft="32dp" />

        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>