<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="213dp"
    android:layout_marginBottom="15dp"
    android:background="@color/cardview_light_background">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="243dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="212dp"
            android:background="@color/cdocCardBg">

            <TextView
                android:id="@+id/daysStaticTV2"
                android:layout_width="112dp"
                android:layout_height="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="22dp"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:text="IN"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView11"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/doctorTV"
                android:layout_width="161dp"
                android:layout_height="37dp"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                android:text="Dr. John Oliver"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/specialityTV"
                android:layout_width="157dp"
                android:layout_height="26dp"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp"
                android:text="Cardiologist"
                android:textColor="@color/common_google_signin_btn_text_light_default"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doctorTV" />

            <TextView
                android:id="@+id/dateTV"
                android:layout_width="97dp"
                android:layout_height="21dp"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="12dp"
                android:text="27/11/2017"
                android:textColor="@color/off_black_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/specialityTV" />

            <TextView
                android:id="@+id/timeTV"
                android:layout_width="65dp"
                android:layout_height="21dp"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp"
                android:text="6.30 PM"
                android:textColor="@color/off_black_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateTV" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="112dp"
                android:layout_height="56dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="56dp"
                android:text="7"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_light"
                android:textSize="50sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/daysStaticTV"
                android:layout_width="112dp"
                android:layout_height="16dp"
                android:layout_marginEnd="16dp"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:text="DAYS"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="112dp"
                android:layout_height="107dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/calendar"
                app:layout_constraintBottom_toBottomOf="@+id/timeTV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/doctorTV"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/line"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timeTV"
                tools:textColor="@color/line" />

            <TextView
                android:id="@+id/cancelAppointmentButtion"
                android:layout_width="119dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                android:background="@color/cdocCardBg"
                android:paddingTop="15dp"
                android:text="CANCEL"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12"
                app:layout_constraintVertical_bias="1.0"
                android:layout_marginRight="16dp" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>